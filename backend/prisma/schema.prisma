generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
 id        Int   @id @default(autoincrement())
 createdAt DateTime @default(now())
 updatedAt DateTime @updatedAt
 name      String
 email     String   @unique
 password  String
 tasks     Task[]

 @@map("users")
}

model Task {
 id            Int   @id @default(autoincrement())
 createdAt     DateTime @default(now())
 updatedAt     DateTime @updatedAt
 title         String
 description   String?
 status        TaskStatus @default(PENDING)
 dueDate       DateTime
 assignedUser  Int
 user          User     @relation(fields: [assignedUser], references: [id], onDelete: Cascade)

 @@map("tasks")
}

enum TaskStatus {
 PENDING
 IN_PROGRESS
 COMPLETED
}